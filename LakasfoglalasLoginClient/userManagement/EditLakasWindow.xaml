<Window x:Class="LakasfoglalasLoginClient.userManagement.EditLakasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LakasfoglalasLoginClient.userManagement"
        mc:Ignorable="d"
                Title="NewLakasWindow" Height="400" Width="700">
    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="40"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="50"/>
    </Grid.RowDefinitions>
    <Button x:Name="btnBetoltes"
    Content="Betöltés"
    Click="btnBetoltes_KliKk"
    Width="100"
    Margin="10"/>
    <DataGrid x:Name="dgrLakas"
      Grid.Row="1"
      AutoGenerateColumns="False"
      CanUserAddRows="False"
      CanUserDeleteRows="False"
      CanUserReorderColumns="False"
      CanUserResizeRows="False"
      CanUserResizeColumns="False"
      CanUserSortColumns="False"
      SelectionMode="Single"
      SelectionUnit="FullRow"
      Grid.RowSpan="2"
      >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Utca"
                        Binding="{Binding Utca}"/>
                <DataGridTextColumn Header="Meret"
                        Binding="{Binding Meret}"/>
                <DataGridTextColumn Header="szobák száma"
                        Binding="{Binding SzobakSzama}"/>
                <DataGridTextColumn Header="Ar"
                        Binding="{Binding Ar}"/>
                <DataGridTextColumn Header="Leiras"
                        Binding="{Binding Leiras}"/>
                <DataGridTextColumn Header="Eladva"
                        Binding="{Binding Eladasoks}"/>
                <DataGridTextColumn Header="FelhasznaloID"
                        Binding="{Binding FelhasznaloId}"/>
                <DataGridTextColumn Header="VarosID"
                        Binding="{Binding VarosId}"/>
            </DataGrid.Columns>
        </DataGrid>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Content="Módosítás" Margin="5" Padding="10" Click="Modositas_Click"/>
        <Button Content="Törlés" Margin="5" Padding="10" Click="Torles_Click"/>
        <Button Content="Mésge" Margin="5" Padding="10" Click="Megse_Click"/>
    </StackPanel>
    </Grid>
</Window>

