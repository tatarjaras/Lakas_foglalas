<Window x:Class="LakasfoglalasLoginClient.userManagement.UserListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LakasfoglalasLoginClient.userManagement"
        mc:Ignorable="d"
                Title="UserListWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnBetoltes"
                Content="Betöltés"
                Click="btnBetoltes_Click"
                Width="100"
                Margin="10"/>
        <DataGrid x:Name="dgUsers"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  CanUserSortColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Grid.RowSpan="2"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Felhasználónév"
                                    Binding="{Binding LoginNev}"/>
                <DataGridTextColumn Header="Teljes név"
                                    Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Email"
                                    Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Jogosultsag"
                                    Binding="{Binding PermissionId}"/>
                <DataGridTextColumn Header="Aktív"
                                    Binding="{Binding Active}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
