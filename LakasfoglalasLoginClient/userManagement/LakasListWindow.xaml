<Window x:Class="LakasfoglalasLoginClient.userManagement.LakasListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LakasfoglalasLoginClient.userManagement"
        mc:Ignorable="d"
        Title="UserListWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnBetoltesL"
                Content="Betöltés"
                Click="btnBetoltesL_Click"
                Width="100"
                Margin="10"/>
        <DataGrid x:Name="dgLakas"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  CanUserSortColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Grid.RowSpan="2"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Utca"
                                    Binding="{Binding Utca}"/>
                <DataGridTextColumn Header="Meret"
                                    Binding="{Binding Meret}"/>
                <DataGridTextColumn Header="szobák száma"
                                    Binding="{Binding Szobak_szama}"/>
                <DataGridTextColumn Header="Ar"
                                    Binding="{Binding Ar}"/>
                <DataGridTextColumn Header="Leiras"
                                    Binding="{Binding Leiras}"/>
                <DataGridTextColumn Header="Eladva"
                                    Binding="{Binding Eladva}"/>
                <DataGridTextColumn Header="FelhasznaloID"
                                    Binding="{Binding FelhasznaloID}"/>
                <DataGridTextColumn Header="VarosID"
                                    Binding="{Binding VarosID}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
