<Window x:Class="LakasfoglalasLoginClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LakasfoglalasLoginClient"
        mc:Ignorable="d"
               Title="Bejelentkezés" Height="200" Width="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5,0,5,5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="5,0,5,5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Label Content="Felhasználónév:"/>
            <TextBox x:Name="tbxFelhasznalonev"/>
            <Label Content="Jelszó:"/>
            <PasswordBox x:Name="tbxJelszo"/>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button x:Name="btnBejelentkezes"
                        Content="Bejelentkezés"
                        Click="btnBejelentkezes_Click"/>
                <Button x:Name="btnMegse"
                        Content="Mégse"
                        Click="btnMegse_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
